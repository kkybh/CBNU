# ì´ˆê¸° ì‚¬ì‹¤
facts = {"A", "B", "E"}

# ê·œì¹™ ì •ì˜ (ì¡°ê±´: ì§‘í•©, ê²°ê³¼: ë¬¸ì)
rules = [
    ({"A", "B"}, "C"),
    ({"C"}, "D"),
    ({"D", "E"}, "F")
]

# ì „ë°©í–¥ ì¶”ë¡  í•¨ìˆ˜
def forward_chaining(facts, rules):
    inferred = set(facts)  # ì´ë¯¸ ì•Œê³  ìˆëŠ” ì‚¬ì‹¤
    added = True

    while added:
        added = False
        for condition, result in rules:
            if condition.issubset(inferred) and result not in inferred:
                inferred.add(result)
                added = True
                print(f"ì¶”ë¡ ë¨: {condition} => {result}")
    
    return inferred

# ì‹¤í–‰
final_facts = forward_chaining(facts, rules)
print("\nìµœì¢… ì¶”ë¡  ê²°ê³¼:", final_facts)
